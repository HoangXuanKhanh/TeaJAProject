<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#024204"
    tools:context="layoufavorite.DetaileCa1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Tool_ComeBackTL1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FBD2D0"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_tracNghiem"
            android:text="Trắc Nghiệm"
            android:textSize="40sp"
            android:textColor="#AF2525"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spin_Diem"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/tv_Diem"
            android:layout_gravity="center"
            android:text="Điểm cao: 100"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_Diem"
            android:text="Bắt đầu"
            android:textSize="18sp"
            android:textColor="#009688"
            android:textStyle="bold"
            android:backgroundTint="#972805"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>