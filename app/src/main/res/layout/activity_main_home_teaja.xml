<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_loginss"
    tools:context=".FragmentTEAJA.MainActivityHomeTEAJA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bord_teaja">

        <TextView
            android:id="@+id/tv_Name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="80dp"
            android:text="おはよう ございます!"
            android:textColor="#210259"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_NameSTr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="80dp"
            android:textColor="#210259"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rcy_Paner1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bord_recyclerview11"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>

    <AutoCompleteTextView
        android:id="@+id/act_timkiem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bord_timkiem"
        android:completionThreshold="1"
        android:drawableEnd="@drawable/ic_search"
        android:hint="Tìm Kiếm..."
        android:inputType="text"
        android:maxLength="100"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/rcy_recycler3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpg_QCao"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/cir_QCao"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_listuser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp" />


</RelativeLayout>