<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6DBF6"
    tools:context=".sqlTracNghiem.MainActivityTracNghiem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Tool_ComeBackTracNghiem"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FBD2D0"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_score"
            android:text="Điểm : 0"
            android:freezesText="true"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_view_question_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:freezesText="true"
            android:text="Câu hỏi : 1/a"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_view_catalory"
            android:text="Chủ đề : a"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:text="00 : 30"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/img_loaTracNghiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="#D6DBF6"
                android:padding="15dp"
                android:src="@drawable/ic_loa1" />

            <TextView
                android:id="@+id/text_view_Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/radio_group"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:text="Question"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:freezesText="true"
                    android:text="Lựa chọn 1"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:freezesText="true"
                    android:text="Lựa chọn 2"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:freezesText="true"
                    android:text="Lựa chọn 3"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:freezesText="true"
                    android:text="Lựa chọn 4"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </RadioGroup>

            <Button
                android:id="@+id/button_confirm_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group"
                android:layout_marginStart="180dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FF5722"
                android:freezesText="true"
                android:text="Xác nhận" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>